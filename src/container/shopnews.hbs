<main>
    <section>
        {{> breadcrumbs}}
    </section>
    <section>
        {{#with newsData}}
        <div class="row">
            <img src="{{photo}}" alt="">
            {{#with head}}
            <div>
                <h2 class="mt-5 ms-2">{{heading}}</h2>
                <p class="mt-2">{{description}}</p>
            </div>
            {{/with}}
            {{#each body}}
            <div class="mt-3">
                <h4>{{title}}</h4>
                <p>{{text}}</p>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <hr class="mt-5">
    </section>
    <section class="mt-5">
        {{#with newsOtherBlock}}
        <h2 class="text-center">{{title}}</h2>
        <div class="row">
            {{#each cards}}
            <div class="col-3">
                {{> shoppost}}
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    {{> hrLine}}
    <section>
        {{> shopaction}}
    </section>
</main>