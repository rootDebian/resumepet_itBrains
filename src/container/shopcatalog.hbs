<main>
    <section>
        {{> breadcrumbs}}
    </section>
    <section class="mt-5">
        <h2>{{header}}</h2>
        <div class="row">
            {{#each sortBlock}}
            <div class="col-3">
                <select class="form-select" name="" id="">
                    <option selected value="">{{placeholder}}</option>
                    {{#each options}}
                    <option value="{{value}}">{{text}}</option>
                    {{/each}}
                </select>
            </div>
            {{/each}}
        </div>
    </section>
    <section class="mt-3">
        <div class="row">
            <div class="col-4">
                {{#with filterBlock}}
                <div class="card">
                    <div class="card-body">
                        <div>
                            {{#with sellers}}
                            <p>{{title}}</p>
                            {{#each list}}
                            <div>
                                <input type="checkbox" class="form-check-input">
                                <span>{{value}}</span>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        <hr>
                        <div>
                            {{#with brands}}
                            <p>{{title}}</p>
                            <div class="row pe-3">
                                <input type="text" placeholder="{{input.placeholder}}">
                            </div>
                            {{#each options}}
                            <div class="mt-2">
                                <input type="checkbox" class="form-check-input">
                                <span>{{value}}</span>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                        <hr>
                        <div>
                            {{#with price}}
                            <div class="row px-2">
                                <p>{{title}}</p>
                                <input type="text" class="form-input" placeholder="{{range.from}}">
                                <input type="text" class="form-input mt-2" placeholder="{{range.to}}">
                            </div>
                            <div class="mt-2">
                                <a href="{{button.link}}" class="btn btn-outline-secondary">{{button.text}}</a>
                            </div>
                            {{/with}}
                        </div>
                        <hr>
                        <div>
                            {{#each filterList}}
                            <div>
                                <p>{{title}}</p>
                                {{#each options}}
                                <div>
                                    <input type="checkbox" class="form-check-input">
                                    <span>{{value}}</span>
                                </div>
                                {{/each}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="col-8">
                <div class="row">
                    {{> catalogItem}}
                </div>
            </div>
        </div>
    </section>
    <section>
        {{> shopaction}}
    </section>
</main>