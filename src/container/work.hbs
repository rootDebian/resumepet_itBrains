{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    {{#with main}}
    <main>
        <section>
            <div>
                {{> title data="Work history" big=true}}
            </div>
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}} {{else}} (досі працюємо) {{/if}}
                        </div>
                        <br>
                        <div>
                            {{#if company.url}}
                            {{> link href=company.url text=company.name blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                            <br>
                            <div>
                                <strong>Projects ({{projectAmount}})</strong>
                            </div>
                            <br>
                            <br>
                            {{#each projects}}
                            <div>
                                <ul>
                                    <li>
                                        <div>{{> link href=url text=name blank=true noLine=true}}</div>
                                        <div>
                                            <p>{{about}}</p>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div>
                                <div><em>Project stacks ({{stackAmount}})</em></div>
                                <br>
                                {{#each stack}}
                                <ul>
                                    <li>
                                        <div>{{name}}</div>
                                    </li>
                                </ul>
                                {{/each}}
                            </div>
                            <br>
                            <div>
                                <div><em>Project awards</em></div>
                                <br>
                                {{#each awards}}
                                <ul>
                                    <li>
                                        <div>{{name}}</div>
                                    </li>
                                </ul>
                                {{/each}}
                            </div>
                            {{/each}}
                        </div>
                    </li>
                    <br>
                    {{/each}}
                </ul>
            </div>
        </section>
    </main>
    {{/with}}
</div>

